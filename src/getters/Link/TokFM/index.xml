name: TokFM
short: L:TokFM
web: "http://www.tok.fm/"
uri: qr{tok.fm/TOKFM/\d+,\d+.html}
slots: max
status: OK 2010-09-19

pre:
	use Encode;

start:
	GET( $-{_uri} );

	my @list;
	push @list, $1 . "#/" . uri_escape( encode( "utf8", decode( "iso-8859-2", $2) ) )
		while s{&lt;a\s+href="(.+?)"\s+title="(.+?)"\s+class="tokfm_play"&gt;}{};

	LINK( @list );

# vim: filetype=perl:ts=4:sw=4
</pre>
