name: Simple
short: L:Simple
web: "http://rsget.pl/getters/Link/Simple/"
uri: qr{4gk\.com/}
uri: qr{xurl\.jp/}
uri: qr{tinyurl\.com/}
uri: qr{to\./}
uri: qr{anonym-to\.com/\?}
slots: max
status: OK 2010-06-04

start:
	my $uri = $-{_uri};
	$uri =~ s#(xurl.*)\.html#$1#;
	GET( $uri );
	$-{_uri} =~ m#^(http://.*?/)#;
	my $serv = quotemeta $1;

	my $link;
	if ( $-{_referer} =~ m#^$serv# ) {
		if ( m#&lt;meta\s+http-equiv=("|')refresh\1\s+content=("|')\s*\d+;\s*url=("|'|)(.*?)\3\s*\2\s*&gt;#si ) {
			$link = $4;
		} elsif ( m#&lt;i?frame\s+.*?src=("|')(http://.*?)\1&gt;#si ) {
			$link = $2;
		} else {
			ERROR( "can't find link" );
		}
	} else {
		$link = $-{_referer};
	}

	LINK( $link );

# vim: filetype=perl:ts=4:sw=4
</pre>
