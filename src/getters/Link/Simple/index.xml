name: Simple
short: L:Simple
web: "http://rsget.pl/getters/Link/Simple/"
uri: qr{4gk\.com/}
uri: qr{xurl\.jp/}
uri: qr{tinyurl\.com/}
uri: qr{linkhider\.com/}
uri: qr{to\./}
slots: max
status: OK 2010-05-09

start:
	my $uri = $-{_uri};
	$uri =~ s#(xurl.*)\.html#$1#;
	GET( $uri );
	$-{_uri} =~ m#^(http://.*?/)#;
	my $serv = quotemeta $1;

	my $link;
	if ( $-{_referer} =~ m#^$serv# ) {
		if ( m#&lt;meta http-equiv="refresh" content="\d+;url='(.*?)'"&gt;#i ) {
			$link = $1;
		} elsif ( m#&lt;i?frame\s+.*?src="(http://.*?)"&gt;#i ) {
			$link = $1;
		} else {
			ERROR( "can't find link" );
		}
	} else {
		$link = $-{_referer};
	}

	LINK( $link );

# vim: filetype=perl:ts=4:sw=4
</pre>
