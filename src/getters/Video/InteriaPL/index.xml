name: InteriaPL
short: V:InteriaPL
web: "http://video.interia.pl/"
uri: qr{video\.interia\.pl/obejrzyj,film,\d+}
slots: max
status: OK 2010-06-05

start:
	GET( $-{_uri} );

	! m{&lt;h2&gt;(.*?)&lt;/h2&gt;};
	my $fname = de_ml( $1 );
	$fname =~ s{/}{_}g;
	$-{fname} = $fname . ".flv";

	INFO( name =&gt; $fname, quality =&gt; "flv" );

	! m{so\.addVariable\("vid", "(\d+)"\);};
	GET( "/vurl,id,$1?" );

	! m{videoID=(.*?)&amp;};
	DOWNLOAD( $1, fname =&gt; $-{fname} );

# vim: filetype=perl:ts=4:sw=4
</pre>
