name: Delfi
short: V:Delfi
web: "http://tv.delfi.ee/"
uri: qr{tv\.delfi\.ee/video/[a-zA-Z0-9]+}
slots: max
status: OK 2010-07-13

start:
	GET( $-{_uri} );

	! m{&lt;title&gt;DELFI TV &amp;#62; Video &amp;#62; (.*?)&lt;/title&gt;};
	my $fname = de_ml( $1 );
	$fname =~ s{/}{_}g;
	$fname .= ".flv";
	INFO( name =&gt; $fname, quality =&gt; "flv" );

	! m{addVariable\('file','(.*?)'};

	DOWNLOAD( uri_unescape( $1 ), fname =&gt; $fname );

