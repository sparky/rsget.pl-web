name: ExtremeTube
short: V:ExtremeTube
web: "http://www.extremetube.com/"
uri: qr{extremetube\.com/video/}
slots: max
status: OK 2010-06-05

start:
	GET( $-{_uri} );

	! m{&lt;h1 class="title-video-box".+?&gt;(.*?)&lt;/h1&gt;};
	$-{fname} = de_ml( $1 );
	$-{fname} =~ s{/}{_}g;
	$-{fname} =~ s/\s*$/.flv/;

	INFO( name =&gt; $-{fname}, quality =&gt; "flv" );

	! m{flashvars\.video_url = '(.*?)'};

	DOWNLOAD( $1, fname =&gt; $-{fname} );

