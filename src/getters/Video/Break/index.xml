name: Break
short: V:Break
web: "http://www.break.com/"
uri: qr{break\.com/.+?/.+}
slots: max
status: OK 2010-03-11

# TODO: support pictures

start:
	GET( $-{_uri} );

	ERROR( "file not found" )
		if m{404 Page Not Found};

	! m{sGlobalFileName='(.*?)'};
	my $name = $1;
	$name .= ".flv";
	# there are .mp4 files as well, but seem to have lower quality
	INFO( name =&gt; $name, quality =&gt; "flv" );

	! m{sGlobalContentFilePath='(.*?)'};
	my $fp = $1;
	! m{\s+videoPath\s*=\s*"(.*?)"};
	my $vp = $1;

	DOWNLOAD( "$vp/$fp/$name" );

# vim: filetype=perl:ts=4:sw=4
</pre>
