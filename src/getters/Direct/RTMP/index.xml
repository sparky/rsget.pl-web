name: RTMP
short: Direct::RTMP
web: "http://rsget.pl/getters/Direct/RTMP/"
uri: qr{rtmp://.*[^/]}
uri: qr{rtmpt://.*[^/]}
uri: qr{rtmpe://.*[^/]}
uri: qr{rtmpte://.*[^/]}
uri: qr{rtmps://.*[^/]}
uri: qr{rtmpts://.*[^/]}
slots: max
status: OK 2010-06-27

start:
	GET( $-{_uri}, headonly =&gt; 1 );

	# avoid URI::rtmp requirement
	delete $-{_referer};

	my ( $name ) = $-{_uri} =~ m{.*/(.*)$};
	INFO( name =&gt; $1, size =&gt; -1 );

	DOWNLOAD( $-{_uri} );

# vim: filetype=perl:ts=4:sw=4
