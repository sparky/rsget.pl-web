name: RTSP
short: Direct::RTSP
web: "http://rsget.pl/getters/Direct/RTSP/"
uri: qr{rtsp://.*[^/]}
uri: qr{rtspu://.*[^/]}
slots: max
status: OK 2010-06-27

start:
	GET( $-{_uri}, headonly =&gt; 1 );

	my ( $name ) = $-{_uri} =~ m{.*/(.*)$};
	INFO( name =&gt; $1, size =&gt; -1 );

	DOWNLOAD( $-{_uri} );

# vim: filetype=perl:ts=4:sw=4
