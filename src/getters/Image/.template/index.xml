name: [NAME]
short: I:[NAME]
web: "http://isite.com/"
uri: qr{isite\.com/}
slots: max
status: OK [DATE]

start:
	GET( $-{_uri} );

	! m{&lt;title&gt;(.*?)&lt;/title&gt;};
	my $fname = de_ml( $1 );
	$fname =~ s{/}{_}g;
	$fname .= ".jpeg";

	! m{resolution: (\d+x\d+)};

	INFO( name =&gt; $fname, quality =&gt; $1 );

	! m{&lt;img src='(.*?)'&gt;};
	my $file_uri = $1;
	DOWNLOAD( $file_uri );

# vim: filetype=perl:ts=4:sw=4
</pre>
